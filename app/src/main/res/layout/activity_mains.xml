<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_above="@+id/ll_bottom_bar"
            android:id="@+id/frame_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f7f7f7"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3"
            />

        <LinearLayout
            android:id="@+id/ll_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#f1f4f7">

            <LinearLayout
                android:id="@+id/btn_bottom_bar_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ivBottomBar01"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/main_bottom_publish"
                    />

                <TextView
                    android:id="@+id/tv_bottom_bar_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="发布"
                    android:textSize="11sp"
                    android:textColor="#4d4d4d"
                    android:layout_marginBottom="4dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_bottom_bar_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/ivBottomBar02"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/main_bottom_valuablebook"
                    />
                <TextView
                    android:id="@+id/tv_bottom_bar_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝典"
                    android:textSize="11sp"
                    android:layout_marginTop="6dp"
                    android:textColor="#4d4d4d"
                    android:layout_marginBottom="4dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_bottom_bar_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivBottomBar03"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/main_bottom_main"
                    />
                <TextView
                    android:id="@+id/tv_bottom_bar_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textSize="11sp"
                    android:layout_marginTop="6dp"
                    android:textColor="#4d4d4d"
                    android:layout_marginBottom="4dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_bottom_bar_04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivBottomBar04"
                    android:layout_width="21dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/main_bottom_dope"
                    />
                <TextView
                    android:id="@+id/tv_bottom_bar_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="消息"
                    android:textSize="11sp"
                    android:textColor="#4d4d4d"
                    android:layout_marginBottom="4dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_bottom_bar_05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivBottomBar05"
                    android:layout_width="19dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/main_bottom_me"
                    />
                <TextView
                    android:id="@+id/tv_bottom_bar_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="我的"
                    android:textSize="11sp"
                    android:textColor="#4d4d4d"
                    android:layout_marginBottom="4dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        ></RelativeLayout>
</RelativeLayout>