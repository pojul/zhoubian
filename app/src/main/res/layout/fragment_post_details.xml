<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_rl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="卖全新坚果R1，才抢到的，用了两天，现在便宜200卖出去"
                    android:textSize="18sp"
                    android:textColor="#080808"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:lineSpacingExtra="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="24dp"
                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/user_photo"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@drawable/test_me"
                        app:riv_oval="true"
                        android:scaleType="centerCrop"
                        app:riv_tile_mode="clamp"
                        app:riv_corner_radius="19.5dp"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="17dp"
                        android:layout_gravity="center_vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/nick_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:textColor="#000513"
                                android:textSize="13sp"
                                android:text="周杰伦"
                                />

                            <TextView
                                android:id="@+id/phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:textColor="#c4c4c4"
                                android:textSize="10sp"
                                android:text="（1510****820）"
                                android:layout_marginLeft="11dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/come_before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:textColor="#c4c4c4"
                            android:textSize="11sp"
                            android:text="13分钟前来过  "
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="11dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/follow"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginTop="6dp"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:background="@drawable/d53c3c_3bg"
                        android:text="关注"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >
                    <TextView
                        android:id="@+id/base_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="【个人】陈先生发布于5月22日  17:21"
                        android:textSize="11sp"
                        android:textColor="#6d6d6d"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        />

                    <TextView
                        android:id="@+id/visit_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浏览数370"
                        android:textSize="11sp"
                        android:textColor="#c4c4c4"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/locations"
                        />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="距离0.5KM"
                        android:textSize="11sp"
                        android:textColor="#080808"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="任意地方左滑查看具体位置"
                        android:textSize="11sp"
                        android:textColor="#c4c4c4"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/fff_3_stroke_ccccccbg"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_marginTop="14dp"
                    android:background="#f7f7f7"
                    />

                <LinearLayout
                    android:id="@+id/price_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格："
                        android:textSize="17sp"
                        android:textColor="#080808"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3300元"
                        android:textSize="17sp"
                        android:textColor="#d53c3c"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#f3f3f3"
                    />

                <TextView
                    android:id="@+id/post_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="坚果R1新款全套齐，配件未使用，盒子全在，新机6+64G，高通骁龙处理器845，9.9成新，才激活两天，不议价需要的随时直接联系我，我基本都在学校宿舍。"
                    android:textSize="15sp"
                    android:textColor="#080808"
                    android:lineSpacingExtra="5dp"
                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/post_image1"
                    android:layout_width="match_parent"
                    android:layout_height="199dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/post_image2"
                    android:layout_width="match_parent"
                    android:layout_height="199dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/post_image3"
                    android:layout_width="match_parent"
                    android:layout_height="199dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/red_package_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:layout_marginTop="18dp"
                        android:background="#f7f7f7"
                        />

                    <TextView
                        android:id="@+id/red_passwd_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="14sp"
                        android:textColor="#080808"
                        android:text="楼主设置的红包口令为"
                        />

                    <TextView
                        android:id="@+id/red_package_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:textSize="13sp"
                        android:textColor="#d53c3c"
                        android:text="XXXXXXXXXXX"
                        android:gravity="center"
                        />

                    <ImageView
                        android:id="@+id/rob_red_package"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/big_red_packet"
                        />

                    <TextView
                        android:id="@+id/rob_red_package_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="12sp"
                        android:textColor="#d53c3c"
                        android:text="说明：点击红包，然后输入对应的口令，即可抢到红包。"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        />

                    <TextView
                        android:id="@+id/rea_package_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp"
                        android:textColor="#080808"
                        android:text="已抢25份   剩余36份"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="23dp"
                    android:background="#f3f3f3"
                    />

                <TextView
                    android:id="@+id/key_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="14sp"
                    android:textColor="#080808"
                    android:text="关键词： XXX    XXX   XXX"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#aeaeae"
                    android:text="风险提示：本帖由网友自行发布，周边信息提醒您，网络信息有风险，建议您擦亮眼睛，分辨骗子，凡是先百度搜索下“关键词+骗子”，多看一些案例，会助您分辨骗子哦。因本平台信息所致任何损失，周边信息概不负责。"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="#f7f7f7"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    >
                    <TextView
                        android:id="@+id/comment_num"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#080808"
                        android:text="评论 · 0"
                        android:layout_gravity="center_vertical"
                        />

                    <RadioButton
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:button="@null"
                        android:background="@drawable/radio_buttons"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#080808"
                        android:text="口令显示"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:background="#fff" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#f7f7f7"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/main_bg"
                    android:textSize="15sp"
                    android:text="你可能感兴趣的帖子"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:background="#fff"
                    android:layout_marginBottom="43dp"
                    />
            </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        >
        <RelativeLayout
            android:id="@+id/comment_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/ripple_normal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/comment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="评论"
                    android:textSize="11sp"
                    android:textColor="#080808"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/ripple_normal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/private_chat"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="私聊"
                    android:textSize="11sp"
                    android:textColor="#080808"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/ripple_normal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/private_chat"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="电话"
                    android:textSize="11sp"
                    android:textColor="#080808"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/collect_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/ripple_normal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="21dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_collect"
                    />

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="收藏"
                    android:textSize="11sp"
                    android:textColor="@color/selected_text_red_black"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>