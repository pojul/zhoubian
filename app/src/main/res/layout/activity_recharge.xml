<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#f7f7f7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pay">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="#f7f7f7"
            >
            <include layout="@layout/title_bar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="当前余额：500.00"
                android:textSize="17sp"
                android:textColor="#080808"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="自定义充值"
                android:textSize="14sp"
                android:textColor="#6d6d6d"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <EditText
                    android:id="@+id/custom_rcharge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="请输入充值价格"
                    android:textSize="14sp"
                    android:textColorHint="#b2a5a5"
                    android:inputType="number"
                    android:textColor="#212121"
                    />

                <ImageView
                    android:id="@+id/delete_custom_rcharge"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/delete"
                    android:clickable="true"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="固定充值"
                android:textSize="14sp"
                android:textColor="#6d6d6d"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/recharge_ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="19dp"
                >
                <TextView
                    android:id="@+id/recharge_1"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:textColor="#212121"
                    android:text="500元"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/selector_fixed_recharge"
                    android:clickable="true"
                    />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/recharge_2"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:textColor="#212121"
                    android:text="1000元"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/selector_fixed_recharge"
                    android:clickable="true"
                    />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/recharge_3"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:textColor="#212121"
                    android:text="2000元"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/selector_fixed_recharge"
                    android:clickable="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/recharge_ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="11dp"
                android:paddingBottom="19dp"
                >
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/recharge_4"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:textColor="#212121"
                    android:text="6000元"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:background="@drawable/selector_fixed_recharge"
                    android:clickable="true"
                    />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/recharge_5"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:textColor="#212121"
                    android:text="10000元"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/selector_fixed_recharge"
                    android:clickable="true"
                    />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/recharge_6"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:textColor="#212121"
                    android:text="50000元"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/selector_fixed_recharge"
                    android:clickable="true"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="选择支付方式"
                android:textSize="14sp"
                android:textColor="#6d6d6d"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >
                <LinearLayout
                    android:id="@+id/pay_by_ali_ll"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/zfb"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="支付宝支付"
                        android:textColor="#080808"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        />

                    <RadioButton
                        android:id="@+id/pay_by_ali"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:button="@null"
                        android:background="@drawable/radio_button"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="59dp"
                    android:background="#f3f3f3"
                    />

                <LinearLayout
                    android:id="@+id/pay_by_wechat_ll"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/wx"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="微信支付"
                        android:textColor="#080808"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        />

                    <RadioButton
                        android:id="@+id/pay_by_wechat"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:button="@null"
                        android:background="@drawable/radio_button"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textColor="#fff"
        android:text="确认支付"
        android:textSize="18sp"
        android:gravity="center"
        android:background="#d53c3c"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        />

</RelativeLayout>
