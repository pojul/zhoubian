<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f7f7f7"
    >
    <include layout="@layout/title_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="当前余额：500.00"
        android:textSize="17sp"
        android:textColor="#080808"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="自定义充值"
        android:textSize="14sp"
        android:textColor="#6d6d6d"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="请输入充值价格"
            android:textSize="14sp"
            android:textColorHint="#b2a5a5"
            android:inputType="number"
            android:textColor="#212121"
            />
        
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/delete"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="固定充值"
        android:textSize="14sp"
        android:textColor="#6d6d6d"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="19dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:textColor="#212121"
            android:text="500元"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/fff_3_stroke_1bg"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:textColor="#212121"
            android:text="1000元"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/fff_3_stroke_1bg"
            android:layout_marginLeft="9dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:textColor="#212121"
            android:text="2000元"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/fff_3_stroke_1bg"
            android:layout_marginLeft="9dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="11dp"
        android:paddingBottom="19dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:textColor="#212121"
            android:text="6000元"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/fff_3_stroke_1bg"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:textColor="#212121"
            android:text="10000元"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/fff_3_stroke_1bg"
            android:layout_marginLeft="9dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:textColor="#212121"
            android:text="50000元"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/fff_3_stroke_1bg"
            android:layout_marginLeft="9dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="选择支付方式"
        android:textSize="14sp"
        android:textColor="#6d6d6d"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/zfb"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="支付宝支付"
                android:textColor="#080808"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                />
            
            <RadioButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@null"
                android:background="@drawable/radio_button"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="59dp"
            android:background="#f3f3f3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/wx"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="微信支付"
                android:textColor="#080808"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                />

            <RadioButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@null"
                android:background="@drawable/radio_button"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textColor="#fff"
            android:text="确认支付"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#d53c3c"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>