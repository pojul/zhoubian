<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fff"
    >
    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textSize="15sp"
                        android:textColor="#222222"
                        android:layout_gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColorHint="#939393"
                        android:hint="11位手机号码"
                        android:textSize="12sp"
                        android:layout_marginLeft="25dp"
                        android:textColor="#222222"
                        android:background="@null"
                        android:maxLength="11"
                        android:inputType="number"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="21dp"
                    />

                <LinearLayout
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="验证码"
                        android:textSize="15sp"
                        android:textColor="#222222"
                        android:layout_gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColorHint="#939393"
                        android:hint="注意查收短信"
                        android:textSize="12sp"
                        android:layout_marginLeft="25dp"
                        android:textColor="#222222"
                        android:background="@null"
                        android:inputType="number"
                        />

                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发送验证码"
                        android:textSize="16sp"
                        android:textColor="@color/main_bg"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="21dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="用验证码登录代表您同意"
                        android:textColor="#939393"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/user_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="《周边信息用户协议》"
                        android:textColor="@color/selected_text_red_red"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:clickable="true"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_marginTop="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#fff"
                    android:text="登录"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/d53c3c_23bg"
                    />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#939393"
            android:textSize="12sp"
            android:text="随便看看"
            android:layout_above="@+id/iv"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_bottom"
            />
    </LinearLayout>
</LinearLayout>